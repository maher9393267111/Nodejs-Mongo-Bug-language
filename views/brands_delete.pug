extends layout

block content

  h1 #{title}: #{brand.name}
  
  if brand_products.length
  
    p #[strong Delete the following products before attempting to delete this Brand.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Products
    
      each product in brand_products
        a(href=product.url) #{product.name}

  else
    p Do you really want to delete this Brand?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=brand._id )

      button.btn.btn-primary(type='submit') Delete